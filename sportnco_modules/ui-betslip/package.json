{
  "name": "@sportnco/ui-betslip",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "main": "./dist/plugin/betslip-widget.umd.js",
  "module": "./dist/plugin/betslip-widget.es.js",
  "exports": {
    ".": {
      "import": "./dist/plugin/betslip-widget.es.js",
      "require": "./dist/plugin/betslip-widget.umd.js"
    },
    "./standalone": "./dist/standalone/betslip-widget.iife.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && npm run build:plugin && npm run build:standalone",
    "build:plugin": "vite build",
    "build:standalone": "BUILD_MODE=standalone vite build",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@tailwindcss/vite": "^4.1.14",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.33.0",
    "eslint-plugin-oxlint": "~1.11.0",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.5.1",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.11.0",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vue": "^3.5.22",
    "vue-eslint-parser": "^10.0.0",
    "vue-tsc": "^3.1.0"
  },
  "volta": {
    "node": "22.20.0",
    "yarn": "4.10.3"
  }
}
